	<body id="page-top">
        <%- include navbar.ejs %>
        <div id="wrapper">
				<%- include sidebar.ejs %>
					<div id="content-wrapper">
						<div class="container-fluid">
							<div class="card mb-3">
								<div class="card-header">
									<i class="fas fa-address-card"></i> &nbsp; Basic Information
								</div>
								<form id= "form1" method="post" action="./init/update_info">
									<div class="card-body">
										<div class="form-group row">
											<label for="username" class="col-sm-2 col-form-label"><b>User ID:</b></label>
											<div class="col-sm-4">
												<input type="text" required="required" readonly class="form-control-plaintext" id="username"  value="<%= data[0].username %>"  name="username">
											</div>
											<label for="Gender" class="col-sm-2 col-form-label"><b>Gender:</b></label>
											<div class="col-sm-4">
												<input type="text" required="required" readonly class="form-control-plaintext" id="gender" value="<%= data[0].gender %>"  name="gender">
											</div>
										</div>
										<div class="form-group row">
											<label for="display_name" class="col-sm-2 col-form-label"><b>Display Name:</b></label>
											<div class="col-sm-4">
												<input type="text" required="required" class="form-control" id="display_name" placeholder="display_name" value="<%= data[0].display_name %>" name="display_name" >
											</div>
											<label for="phone_num" class="col-sm-2 col-form-label"><b>Phone Number:</b></label>
											<div class="col-sm-4">
												<input type="text" required="required" class="form-control" id="phone_num" placeholder="phone_num" value="<%= data[0].phone_num %>" name="phone_num" >
											</div>

										</div>
									</div>
									<div class="card-footer small text-muted"><button type="submit" class="btn btn-secondary">Update Info</button> &nbsp;&nbsp;&nbsp; <span class="badge badge-pill badge-info"></span></div>
								</form>
							</div>
							<div class="card mb-3">
								<div class="card-header">
									<i class="fas fa-address-card"></i> &nbsp; Driver Registration 
								</div>
								<form id="form2" method="get" action="/driver_update">
									<div class="card-body">
										<div class="form-group row">
											<label for="username" class="col-sm-2 col-form-label"><b>User ID:</b></label>
											<div class="col-sm-4">
												<input type="text" required="required" readonly class="form-control-plaintext" id="username"  value="<%= data[0].username %>"  name="username">
											</div>
											<label for="registered" class="col-sm-2 col-form-label"><b>Driver:</b></label>
											<div class="col-sm-4">
												<input type="text" required="required" readonly class="form-control-plaintext" id="driver" value="<%= status %>"  name="driver">
											</div>
										</div>
										<div class="form-group row">
												<label for="username" class="col-sm-2 col-form-label"><b>Driver rating:</b></label>
												<div class="col-sm-4">
													<input type="text" required="required" readonly class="form-control-plaintext" id="username"  value="<%= data3 %>"  name="username">
												</div>
											</div>
									</div>
									<div class="card-footer small text-muted"><button type="submit" class="btn btn-secondary">Register/Update driver infomation</button> &nbsp;&nbsp;&nbsp; <span class="badge badge-pill badge-info"></span></div>
								</form>
							</div>
						</div>
					</div>
					
        </div>

  </body>
